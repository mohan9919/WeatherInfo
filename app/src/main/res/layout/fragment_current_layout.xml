<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff1ba1ee"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="location.rahman.weathercurrent.MainActivity">



    <TextView
        android:id="@+id/current_cityTv"
        android:textColor="#fff"
        android:text="Dhaka,Bangladesh"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/current_thumbnailIcon"
        android:layout_below="@+id/current_cityTv"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/current_temp_text"
        android:textColor="#fff"
        android:text="Temp"
        android:layout_toRightOf="@+id/current_thumbnailIcon"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_windText"
        android:textColor="#fff"
        android:text="Wind"
        android:layout_below="@+id/current_thumbnailIcon"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_cloudText"
        android:textColor="#fff"
        android:text="Condition"
        android:layout_below="@+id/current_windText"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_pressureText"
        android:textColor="#fff"
        android:text="Pressure"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/current_cloudText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_humidText"
        android:textColor="#fff"
        android:text="Humidity"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/current_pressureText"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_riseText"
        android:textColor="#fff"
        android:text="Sunrise"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/current_humidText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_setText"
        android:textColor="#fff"
        android:text="Sunset"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/current_riseText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/current_updateText"
        android:textColor="#fff"
        android:text="Last Updated"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/current_setText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>