<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="#ff1ba1ee"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="location.rahman.weathercurrent.MainActivity">
    <TextView
        android:id="@+id/citySearchTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:id="@+id/cityTv"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Dhaka,Bangladesh"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/thumbnailIcon"
        android:visibility="visible"
        android:layout_below="@+id/cityTv"
        android:layout_marginTop="10dp"

        android:layout_width="100dp"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/tempText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Temp"
        android:layout_toRightOf="@+id/thumbnailIcon"
        android:paddingLeft="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/windText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Wind"
        android:layout_below="@+id/thumbnailIcon"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/cloudText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Condition"
        android:layout_below="@+id/windText"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/pressureText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Pressure"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/cloudText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/humidText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Humidity"
        android:layout_centerHorizontal="false"
        android:layout_below="@+id/pressureText"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/riseText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Sunrise"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/humidText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/setText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Sunset"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/riseText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/updateText"
        android:visibility="visible"
        android:textColor="#fff"
        android:text="Last Updated"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/setText"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list_view_lv"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updateText">
    </ListView>
    <android.support.design.widget.TabLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tabLayout"
        >
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:visibility="gone"
        android:id="@+id/vpPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
